{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "private": true,
  "engines": {
    "node": "8"
  },
  "scripts": {
    "test": "jest",
    "watch": "tsc --watch",
    "dev": "yarn deps && yarn watch",
    "clean": "rm -rf ../../dist/functions",
    "build": "yarn deps && tsc --project .",
    "lint": "tslint -p . -c tslint.json src/**/*.ts",
    "deps": "yarn deps:copy && yarn deps:install",
    "deps:copy": "cp package.json yarn.lock .env ../../dist/functions",
    "deps:install": "cd ../../dist/functions && yarn && cd ../../app/functions"
  },
  "dependencies": {
    "axios": "0.18.0",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "firebase": "5.4.1",
    "firebase-admin": "6.0.0",
    "firebase-functions": "2.0.5",
    "nuxt": "1.4.2",
    "nuxt-property-decorator": "1.2.0",
    "vuex-class": "0.3.1",
    "vuex": "3.0.1"
  },

  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/jest": "23.3.1",
    "typescript": "3.0.3",
    "tslint": "5.11.0",
    "ts-jest": "23.1.3",
    "jest": "23.2.0",
    "firebase-functions-test": "0.1.3",
    "tslint-microsoft-contrib": "5.2.0",
    "superagent": "^3.8.3",
    "supertest": "^3.1.0"
  }
}
